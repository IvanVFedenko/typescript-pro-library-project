{
  "name": "typescript-pro-library-project",
  "version": "1.0.0",
  "description": "A micro library written from scratch to take advantage of the power of TypeScript",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "build": "tsc -p tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IvanVFedenko/typescript-pro-library-project"
  },
  "author": "Ivan Fedenko",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.7",
    "@types/node": "^14.0.26",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.3",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test && lint-staged"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      ".ts$": "ts-jest"
    },
    "testRegex": ".*\\.spec\\.ts$"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "git add",
      "prettier --write --no-semi --single-quote --trailing-comma es5"
    ]
  }
}
